    <%- include('../partials/header') %>
    <h1>Hello World - Rate Your Date (SHOW)</h1>
  <h5>this page shows the details of ONE of the user's matches 
    and has a form where you can send a message to that match</h5> 
    
   <section id="show-page">
       <div>Match: </div>
       <div>
           <%= match.matchName %> 
       </div>
       <div>Date: </div>
       <div>
           <%= match.matchDate %> 
       </div>
       <div>Overall Rating: </div>
       <div>
           <%= match.overallRating %> 
       </div>
   </section>

   <form id="send-message-to-match" action="/matches/<%= match.__id %>/messages" method="POST">
    <select name="messageId">
        <%- messages.map(m=>
        `<option value="${m._id}">${m.matchName}</option>`
        ).join('') %>
    </select>
    <button type="submit">Send Message</button>
</form>

<br><br>  
<h2>Reviews</h2>

<% if (user) { %> 

    <form id="add-review-form" method="POST" action="/matches/<%= match._id %>/reviews">
    
    </form>

}







