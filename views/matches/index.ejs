<table id="list" class="table table-bordered table-striped table-hover">
    <thead>
        <td colspan="4" style="color:antiquewhite; background-color: #4A154B;"><strong>Reviews You've Written</strong></td>
        <tr>
            <th class="text-center">Reviewed Match</th>
            <th class="text-center">Matched Date</th>
            <th class="text-center">Review Details</th>
            <th class="text-center"></th>
        </tr>
    </thead>
    <tbody>
        <% matches.forEach(function(m) { %>
            <tr>
                <td><%= m.matchName %></td>
                <td><%= m.matchDate %></td>
                <td><a href="/matches/<%= m._id %>">Details</a></td>
            </tr>
        <% }); %>
    </tbody>
</table>











